{
	"compilerOptions": {
		"target": "esnext",
		"types": ["vite/client", "node", "chrome", "vite-plugin-svgr/client"],
		"lib": ["dom", "dom.iterable", "esnext", "WebWorker"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
			"@pages/*": ["src/pages/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src", "utils", "vite.config.ts"]
}
